{
  "manifest_version": 3,
  "name": "Notetaker Extension",
  "version": "1.0.0",
  "description": "A section-based note-taking Chrome extension with voice recognition for all note fields.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"]
}